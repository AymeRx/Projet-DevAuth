<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>My Blogs</title>
    <!-- Ajoutez des liens vers des fichiers CSS ou d'autres ressources si nécessaire -->
</head>
<body>
    <h1>My Blogs</h1>
      <nav class="navbar navbar-expand-lg bg-body-tertiary position-absolute top-0 end-0">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/logout">Mes blogs</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
              </li>
          </div>
        </div>
      </nav>
    
    <!-- <h2>All Blogs:</h2> -->
    <div class="card-group">
        <% myBlogs.forEach(blog => { %>
            <div class="card m-3">
                <a href="/edit-blog/<%= blog.blog_id %>/<%= user[0].user_id %>"><i class="fa-regular fa-pen-to-square position-absolute top-0 end-0 p-2"></i></a>
                <img src="<%= blog.image %>" class="card-img-top" alt="Image de <%= blog.nom %>">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.nom %></h5>
                    <p class="card-text"><%= blog.text %></p>
                </div>
                <div class="card-footer">
                    <small class="text-body-secondary">Publié par <%= user.name %> le <%= formatDate(blog.date) %></small>
                    <!-- <i class="fa-regular fa-pen-to-square position-absolute bottom-0 end-0"></i> -->
                </div>
            </div>
        <% }); %>
    </div>
    
    <% function formatDate(date) { %>
        <% const options = { year: 'numeric', month: 'long', day: 'numeric' }; %>
        <%= new Date(date).toLocaleDateString('fr-FR', options) %>
    <% } %>
    <!-- Ajoutez d'autres éléments HTML au besoin -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
